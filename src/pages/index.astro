---
import '../styles/global.css';
import Header from '../components/Header.astro';
import PatternsView from '../components/PatternsView.tsx';
import Analytics from '../components/Analytics.astro';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}/favicon.svg`.replace(/\/+/g, '/')} />
		<meta name="generator" content={Astro.generator} />
		<title>LeetCompass</title>
		<meta name="description" content="Interactive visual map for LeetCode problem patterns. Learn algorithms through pattern recognition and solve smarter." />
		<Analytics />
	</head>

	<body class="bg-white text-gray-900 h-screen flex flex-col">
		<Header />
		<main class="flex-1 overflow-hidden">
			<PatternsView client:load />
		</main>
	</body>
</html>
